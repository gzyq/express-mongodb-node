<%- include('../includes/head') %> 
<div class="main">
  <h1><%= title %></h1>
  <table class="table table-hover table-bordered"> 
   <thead> 
        <tr> 
          <th>分类名字</th> 
          <th>查看</th> 
          <th>更新</th> 
          <th>删除</th> 
        </tr> 
       <tbody> 
            <% catetories.forEach((item)=>{ %> 
               <tr class="item-id-<%= item._id %>"> 
                   <td><%= item.name %></td> 
                   <td><a href="../movie/<%= item._id %>" target="_blank">查看</a></td> 
                   <td><a href="../admin/update/<%= item._id %>" target="_blank">修改</a></td> 
                   <td> 
                       <button class="btn btn-danger del" data-id="<%= item._id %>">删除</button> 
                   </td> 
               </tr> 
            <% }) %> 
        </tbody> 
    </thead> 
</table> 
</div>
